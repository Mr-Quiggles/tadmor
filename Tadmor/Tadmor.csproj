  <ItemGroup>
    <None Update="appsettings.sample.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="sonagen.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
